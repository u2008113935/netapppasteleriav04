<?xml version="1.0" encoding="utf-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="apppasteleriav04.AppShell"
       xmlns:catalog="clr-namespace:apppasteleriav04.Views.Catalog"
       xmlns:cart="clr-namespace:apppasteleriav04.Views.Cart"
       xmlns:orders="clr-namespace:apppasteleriav04.Views.Orders"
       xmlns:profile="clr-namespace:apppasteleriav04.Views.Profile"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False">

    <TabBar>

        <!-- ðŸ  INICIO -->
        <Tab Title="Inicio" Icon="home.svg">
            <ShellContent 
                Route="catalog"
                ContentTemplate="{DataTemplate catalog:CatalogPage}" />
        </Tab>

        <!-- ðŸ›’ CARRITO -->
        <Tab Title="Carrito" Icon="cart.svg">
            <ShellContent 
                Route="cart"
                ContentTemplate="{DataTemplate cart:CartPage}" />
        </Tab>

        <!-- ðŸ“¦ PEDIDOS -->
        <Tab Title="Pedidos" Icon="orders.svg">
            <ShellContent 
                Route="orders"
                ContentTemplate="{DataTemplate orders:OrdersPage}" />
        </Tab>

        <!-- ðŸ‘¤ PERFIL -->
        <Tab Title="Perfil" Icon="user.svg">
            <ShellContent 
                Route="profile"
                ContentTemplate="{DataTemplate profile:ProfilePage}" />
        </Tab>

    </TabBar>

</Shell>