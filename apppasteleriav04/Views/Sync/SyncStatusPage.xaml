<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Sync.SyncStatusPage"
             Title="Estado de SincronizaciÃ³n">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="SincronizaciÃ³n" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <!-- Status Card -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="12" Padding="20">
                <VerticalStackLayout Spacing="16">
                    
                    <!-- Connection Status -->
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ”„" FontSize="32"/>
                        <Label x:Name="StatusLabel" 
                               Text="{Binding SyncStatus}" 
                               FontSize="18"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="#E0E0E0"/>
                    
                    <!-- Pending Items -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Pendientes:" FontSize="16"/>
                        <Label x:Name="PendingCountLabel" 
                               Text="{Binding PendingCount}" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#FF6B9D"/>
                    </HorizontalStackLayout>
                    
                    <!-- Last Sync -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Ãšltima sync:" FontSize="14" TextColor="#666"/>
                        <Label x:Name="LastSyncLabel" 
                               Text="{Binding LastSyncTimeText}" 
                               FontSize="14" 
                               TextColor="#666"/>
                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </Frame>
            
            <!-- Sync Button -->
            <Button Text="ðŸ”„ Sincronizar Ahora"
                    Clicked="OnSyncNowClicked"
                    Command="{Binding SyncNowCommand}"
                    BackgroundColor="#6C5CE7"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="8"
                    HeightRequest="50"/>
            
            <!-- Clear Queue Button -->
            <Button Text="ðŸ—‘ï¸ Limpiar Cola"
                    Clicked="OnClearQueueClicked"
                    BackgroundColor="#E74C3C"
                    TextColor="White"
                    CornerRadius="8"/>
            
            <!-- Syncing Indicator -->
            <ActivityIndicator IsRunning="{Binding IsSyncing}" 
                               IsVisible="{Binding IsSyncing}"
                               Color="#6C5CE7"/>
            
            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center"/>
                   
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>