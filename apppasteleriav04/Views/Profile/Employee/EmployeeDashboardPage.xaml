                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Reparto -->
                <Frame Grid.Column="0" Grid.Row="1" 
                       CornerRadius="10" 
                       Padding="15"
                       BackgroundColor="#4CAF50">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDeliveryTapped"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸšš" 
