<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Profile.Employee.EmployeeDashboardPage"
             Title="Panel de Empleado">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame BackgroundColor="#FF6B9D" CornerRadius="10" Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Bienvenido, Empleado" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="RoleLabel" 
                           Text="Rol: Cocina" 
                           FontSize="16"
                           TextColor="White"/>
