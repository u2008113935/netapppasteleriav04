                               HorizontalOptions="Center"/>
                        <Label Text="Reparto" 
                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Sincronizar -->
                <Frame Grid.Column="1" Grid.Row="1" 
                       CornerRadius="10" 
                       Padding="15"
                       BackgroundColor="#9C27B0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSyncTapped"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ”„" 
                               FontSize="36"
