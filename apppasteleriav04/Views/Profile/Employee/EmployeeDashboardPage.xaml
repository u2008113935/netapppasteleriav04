                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Cocina -->
                <Frame Grid.Column="1" Grid.Row="0" 
                       CornerRadius="10" 
                       Padding="15"
                       BackgroundColor="#FF9800">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnKitchenTapped"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ‘¨â€ðŸ³" 
                               FontSize="36"
