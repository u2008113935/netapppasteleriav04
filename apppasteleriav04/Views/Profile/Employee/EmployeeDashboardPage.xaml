                </Frame>
            </Grid>

            <!-- Recent Activity -->
            <Label Text="Actividad Reciente" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            
            <Frame CornerRadius="10" Padding="15" BorderColor="#E0E0E0">
                <Label Text="No hay actividad reciente" 
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>