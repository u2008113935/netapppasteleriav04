<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Profile.Admin.PromotionsPage"
             Title="GestiÃ³n de Promociones"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Padding="16">
            <Button Text="+ Nueva PromociÃ³n"
                    Clicked="OnAddPromotionClicked"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="End"/>
        </Grid>

        <!-- Promotions List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="8">
                
                <CollectionView x:Name="PromotionsCollection"
                                ItemsSource="{Binding Promotions}"
                                EmptyView="No hay promociones">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,4" 
                                   Padding="12"
                                   BackgroundColor="{StaticResource CardBackgroundColor}"
                                   CornerRadius="8">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    
                                    <!-- Promotion Name -->
                                    <Label Grid.Row="0"
                                           Text="{Binding DisplayName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"/>

                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                           Text="{Binding Description}" 
                                           FontSize="12"
                                           TextColor="{StaticResource SecondaryTextColor}"/>

                                    <!-- Discount Info -->
                                    <Label Grid.Row="2"
                                           Text="{Binding DiscountValue, StringFormat='Descuento: {0}'}" 
                                           FontSize="12"/>

                                    <!-- Dates -->
                                    <Label Grid.Row="3"
                                           Text="{Binding StartDate, StringFormat='Vigencia: {0:dd/MM/yyyy}'}" 
                                           FontSize="12"
                                           TextColor="{StaticResource SecondaryTextColor}"/>

                                    <!-- Status Badge -->
                                    <Frame Grid.Column="1" Grid.RowSpan="2"
                                           Padding="8,4"
                                           CornerRadius="12"
                                           VerticalOptions="Start"
                                           HasShadow="False">
                                        <Frame.Triggers>
                                            <DataTrigger TargetType="Frame" 
                                                         Binding="{Binding IsActive}" 
                                                         Value="True">
                                                <Setter Property="BackgroundColor" Value="LightGreen"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame" 
                                                         Binding="{Binding IsActive}" 
                                                         Value="False">
                                                <Setter Property="BackgroundColor" Value="LightGray"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                        <Label FontSize="10"
                                               FontAttributes="Bold">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" 
                                                             Binding="{Binding IsActive}" 
                                                             Value="True">
                                                    <Setter Property="Text" Value="Activa"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" 
                                                             Binding="{Binding IsActive}" 
                                                             Value="False">
                                                    <Setter Property="Text" Value="Inactiva"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </Frame>

                                    <!-- Action Buttons -->
                                    <HorizontalStackLayout Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"
                                                           VerticalOptions="End"
                                                           Spacing="4">
                                        <Button Text="âœï¸"
                                                Clicked="OnEditPromotionClicked"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="{StaticResource PrimaryColor}"
                                                TextColor="White"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                CornerRadius="20"/>
                                        <Button Text="ðŸ—‘ï¸"
                                                Clicked="OnDeletePromotionClicked"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                CornerRadius="20"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <ActivityIndicator x:Name="LoadingIndicator" 
                                   IsRunning="False" 
                                   IsVisible="False"
                                   Color="{StaticResource PrimaryColor}"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Edit Modal -->
        <Frame x:Name="EditModal"
               Grid.Row="0" Grid.RowSpan="2"
               IsVisible="False"
               BackgroundColor="#CC000000"
               Padding="0">
            <Frame BackgroundColor="{StaticResource PageBackgroundColor}"
                   Padding="16"
                   CornerRadius="12"
                   VerticalOptions="Center"
                   Margin="20">
                <ScrollView>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Editar PromociÃ³n" 
                               FontSize="20" 
                               FontAttributes="Bold"/>

                        <Entry x:Name="NameEntry"
                               Placeholder="Nombre de la promociÃ³n"
                               BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <Entry x:Name="DescriptionEntry"
                               Placeholder="DescripciÃ³n"
                               BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <Entry x:Name="CodeEntry"
                               Placeholder="CÃ³digo promocional"
                               BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <Picker x:Name="DiscountTypePicker"
                                Title="Tipo de descuento"
                                BackgroundColor="{StaticResource EntryBackgroundColor}">
                            <Picker.Items>
                                <x:String>percentage</x:String>
                                <x:String>fixed</x:String>
                            </Picker.Items>
                        </Picker>

                        <Entry x:Name="DiscountValueEntry"
                               Placeholder="Valor del descuento"
                               Keyboard="Numeric"
                               BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <DatePicker x:Name="StartDatePicker"
                                    BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <DatePicker x:Name="EndDatePicker"
                                    BackgroundColor="{StaticResource EntryBackgroundColor}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                            <Button Grid.Column="0"
                                    Text="Guardar"
                                    Clicked="OnSavePromotionClicked"
                                    BackgroundColor="{StaticResource PrimaryColor}"
                                    TextColor="White"/>
                            <Button Grid.Column="1"
                                    Text="Cancelar"
                                    Clicked="OnCancelEditClicked"
                                    BackgroundColor="Gray"
                                    TextColor="White"/>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Frame>
        </Frame>
    </Grid>
</ContentPage>
