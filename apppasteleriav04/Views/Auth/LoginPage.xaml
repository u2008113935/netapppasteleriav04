<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Auth.LoginPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="16">
                <Label Text="Iniciar sesión" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
                <Entry Text="{Binding Email}" Placeholder="Correo electrónico" Keyboard="Email" />
                <Entry Text="{Binding Password}" Placeholder="Contraseña" IsPassword="True" />
                
                <!-- Error message display -->
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="Red" 
                       IsVisible="{Binding HasError}"
                       FontSize="12"
                       HorizontalOptions="Center" />
                
                <Button Text="Ingresar" 
                        Command="{Binding LoginCommand}" 
                        BackgroundColor="#6C5CE7" 
                        TextColor="White" />
                
                <!-- Loading indicator -->
                <ActivityIndicator IsVisible="{Binding IsLoading}" 
                                   IsRunning="{Binding IsLoading}" />
                
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="¿No tienes cuenta?" VerticalOptions="Center" />
                    <Button Text="Crear cuenta" Clicked="OnRegisterClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>