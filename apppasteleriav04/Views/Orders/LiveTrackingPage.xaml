<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    x:Class="apppasteleriav04.Views.LiveTrackingPage"
    Title="Seguimiento en vivo">

    <Grid RowDefinitions="Auto,*,Auto" Padding="8">
        <!-- Barra superior con estado y controles -->
        <StackLayout Orientation="Horizontal" Spacing="8" Padding="4" Grid.Row="0">
            <Label x:Name="LblStatus" Text="Cargando..." VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
            <Button x:Name="BtnToggle" Text="Iniciar" Clicked="BtnToggle_Clicked" HorizontalOptions="End" />
        </StackLayout>

        <!-- Mapa -->
        <maps:Map x:Name="MapControl"
                  Grid.Row="1"
                  MapType="Street"
                  IsShowingUser="false" />

        <!-- Pie con información y botón de refresco manual -->
        <StackLayout Orientation="Horizontal" Spacing="8" Padding="4" Grid.Row="2" HorizontalOptions="Fill">
            <Label x:Name="LblLastUpdate" Text="Última actualización: -" VerticalOptions="Center" />
            <Button Text="Refrescar" Clicked="OnManualRefreshClicked" HorizontalOptions="EndAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>