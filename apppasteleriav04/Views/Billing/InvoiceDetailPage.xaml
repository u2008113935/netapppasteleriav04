<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Billing.InvoiceDetailPage"
             Title="Detalle del Comprobante">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="10">
                <Label Text="PASTELERÍA DELICIA" 
                       FontSize="20" FontAttributes="Bold" 
                       HorizontalOptions="Center" />
                <Label Text="RUC: 20123456789" 
                       FontSize="14" 
                       HorizontalOptions="Center" />
                <Label Text="Av. Principal 123, Lima" 
                       FontSize="14" 
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <BoxView HeightRequest="2" BackgroundColor="#FF6B9D" />

            <!-- Invoice Info -->
            <Frame BackgroundColor="#F5F5F5" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="InvoiceTypeLabel" 
                           Text="BOLETA ELECTRÓNICA" 
                           FontSize="18" FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="N°:" FontAttributes="Bold" />
                        <Label x:Name="InvoiceNumberLabel" Text="B001-00001" FontSize="16" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Fecha:" FontAttributes="Bold" />
                        <Label x:Name="InvoiceDateLabel" Text="05/01/2026 09:23" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Customer Info -->
            <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="DATOS DEL CLIENTE" FontSize="16" FontAttributes="Bold" />
                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" />
                    
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Cliente:" FontAttributes="Bold" />
                        <Label x:Name="CustomerNameLabel" Text="Juan Pérez" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" x:Name="CustomerRucLayout" IsVisible="False">
                        <Label Text="RUC:" FontAttributes="Bold" />
                        <Label x:Name="CustomerRucLabel" Text="" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" x:Name="CustomerAddressLayout" IsVisible="False">
                        <Label Text="Dirección:" FontAttributes="Bold" />
                        <Label x:Name="CustomerAddressLabel" Text="" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Items -->
            <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="DETALLE" FontSize="16" FontAttributes="Bold" />
                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" />
                    
                    <!-- Sample Item - Replace with CollectionView in production -->
                    <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="Torta de Chocolate" />
                        <Label Grid.Row="0" Grid.Column="1" Text="x1" />
                        <Label Grid.Row="0" Grid.Column="2" Text="S/ 84.75" HorizontalOptions="End" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                               Text="Torta de chocolate con cobertura" 
                               FontSize="12" TextColor="#666" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Totals -->
            <Frame BackgroundColor="#F5F5F5" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Subtotal:" />
                        <Label Grid.Column="1" x:Name="SubtotalLabel" Text="S/ 84.75" HorizontalOptions="End" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="IGV (18%):" />
                        <Label Grid.Column="1" x:Name="IgvLabel" Text="S/ 15.25" HorizontalOptions="End" />
                    </Grid>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="TOTAL:" FontSize="18" FontAttributes="Bold" />
                        <Label Grid.Column="1" x:Name="TotalLabel" 
                               Text="S/ 100.00" 
                               FontSize="20" FontAttributes="Bold" 
                               TextColor="#FF6B9D" HorizontalOptions="End" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- SUNAT Status -->
            <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Estado SUNAT:" FontAttributes="Bold" />
                    <Label x:Name="SunatStatusLabel" Text="ACEPTADO" TextColor="#4CAF50" FontAttributes="Bold" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Button Text="Descargar PDF" 
                    x:Name="DownloadButton"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnDownloadClicked" />

            <Button Text="Enviar por Email" 
                    x:Name="SendEmailButton"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="OnSendEmailClicked" />

                <!-- Cancel Button (Disabled - Future Implementation) -->
                <!--
                <Button Text="Anular Comprobante" 
                        x:Name="CancelButton"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnCancelClicked"
                        IsVisible="False" />
                -->
                <!-- TODO: Implement invoice cancellation functionality -->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
