<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Catalog.CatalogPage"
             BackgroundColor="{StaticResource BackgroundPrimary}">

    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="0">

        <!-- HEADER SUPERIOR -->
        <Grid Grid.Row="0" 
              BackgroundColor="{StaticResource BackgroundSecondary}" 
              Padding="16,10"
              ColumnDefinitions="Auto,*,Auto,Auto">

            <!-- Icono pastel -->
            <Label Grid.Column="0"
                   Text="🍰"
                   FontSize="30"
                   VerticalOptions="Center"
                   Margin="0,0,8,0"/>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Delicia"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center"/>

            <!-- Lupa (Busqueda) -->
            <ImageButton Grid.Column="2"
                        Source="icon_search.png"
                        HeightRequest="24"
                        WidthRequest="24"
                        Margin="8,0"
                        BackgroundColor="Transparent"
                        Clicked="OnSearchClicked"/>

            <!-- Filtros -->
            <ImageButton Grid.Column="3"
                        Source="icon_filter.png"
                        HeightRequest="24"
                        WidthRequest="24"
                        Margin="8,0,0,0"
                        BackgroundColor="Transparent"
                        Clicked="OnFilterClicked"/>
        </Grid>

        <!-- SEARCHBAR OCULTO/MUESTRA AL BUSCAR -->
        <SearchBar x:Name="ProductSearchBar"
                   Grid.Row="1"
                   Placeholder="Buscar productos..."
                   IsVisible="False"
                   SearchCommand="{Binding SearchCommand}"
                   TextChanged="OnSearchTextChanged"
                   CancelButtonColor="#FF60B2"
                   Margin="16,0"/>

        <!-- LISTA DE PRODUCTOS -->
        <CollectionView Grid.Row="2"
                       BackgroundColor="{StaticResource BackgroundPrimary}">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" 
                                    HorizontalOptions="Center"
                                    Padding="40">
                    <Label Text="🍰" FontSize="60" HorizontalOptions="Center"/>
                    <Label Text="No hay productos disponibles" 
                           FontSize="18"
                           TextColor="{StaticResource TextPrimary}"
                           HorizontalOptions="Center"
                           Margin="0,12,0,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>