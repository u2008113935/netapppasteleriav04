<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppasteleriav04.Views.Cart.PaymentPage"
             xmlns:vm="clr-namespace:apppasteleriav04.ViewModels.Cart"
             Title="Pagar Pedido">

    <ContentPage.BindingContext>
        <vm:PaymentViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Order Summary -->
            <Frame BackgroundColor="#F5F5F5" BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Resumen del Pedido" FontSize="18" FontAttributes="Bold" />
                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" />
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Label Text="Total a pagar:" FontSize="16" />
                        <Label Text="{Binding Amount, StringFormat='S/ {0:F2}'}" 
                               FontSize="20" FontAttributes="Bold" TextColor="#FF6B9D" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Payment Method Selection -->
            <Label Text="MÃ©todo de Pago" FontSize="18" FontAttributes="Bold" />

            <VerticalStackLayout Spacing="10">
                <Frame BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="ðŸ’µ" FontSize="30" />
                        <Label Text="Efectivo" FontSize="16" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCashSelected" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="ðŸ’³" FontSize="30" />
                        <Label Text="Tarjeta de CrÃ©dito/DÃ©bito" FontSize="16" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCardSelected" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="ðŸ“±" FontSize="30" />
                        <Label Text="Yape" FontSize="16" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnYapeSelected" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame BorderColor="#E0E0E0" CornerRadius="10" Padding="15">
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="ðŸ“²" FontSize="30" />
                        <Label Text="Plin" FontSize="16" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPlinSelected" />
                    </Frame.GestureRecognizers>
                </Frame>
            </VerticalStackLayout>

            <!-- Card Details (shown only when card payment is selected) -->
            <VerticalStackLayout x:Name="CardDetailsSection" Spacing="15" IsVisible="False">
                <Label Text="Datos de la Tarjeta" FontSize="16" FontAttributes="Bold" />

                <VerticalStackLayout Spacing="5">
                    <Label Text="NÃºmero de Tarjeta" />
                    <Entry Text="{Binding CardNumber}" 
                           Placeholder="1234 5678 9012 3456"
                           Keyboard="Numeric"
                           MaxLength="19" />
                </VerticalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                        <Label Text="Fecha de ExpiraciÃ³n" />
                        <Entry Text="{Binding CardExpiry}" 
                               Placeholder="MM/YY"
                               Keyboard="Numeric"
                               MaxLength="5" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                        <Label Text="CVV" />
                        <Entry Text="{Binding CardCvv}" 
                               Placeholder="123"
                               Keyboard="Numeric"
                               MaxLength="4"
                               IsPassword="True" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Nombre del Titular" />
                    <Entry Text="{Binding CardHolder}" 
                           Placeholder="JUAN PEREZ"
                           Keyboard="Text" />
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Status Messages -->
            <Label x:Name="StatusLabel"
                   Text="{Binding PaymentStatus}" 
                   FontSize="14" 
                   TextColor="#666"
                   IsVisible="False"
                   HorizontalOptions="Center" />

            <Label x:Name="ErrorLabel"
                   Text="{Binding ErrorMessage}" 
                   FontSize="14" 
                   TextColor="Red"
                   IsVisible="False"
                   HorizontalOptions="Center" />

            <!-- Action Buttons -->
            <Button Text="Procesar Pago" 
                    Command="{Binding ProcessPaymentCommand}"
                    BackgroundColor="#FF6B9D"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold" />

            <Button Text="Cancelar" 
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#E0E0E0"
                    TextColor="#666"
                    HeightRequest="50"
                    CornerRadius="10" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsProcessing}" 
                               IsVisible="{Binding IsProcessing}"
                               Color="#FF6B9D"
                               HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>