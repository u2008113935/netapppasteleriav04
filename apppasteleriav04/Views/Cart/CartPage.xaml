<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:apppasteleriav03.Converters"
             x:Class="apppasteleriav03.Views.CartPage"
             Title="Carrito">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:ImagePathToUriConverter x:Key="ImagePathToUriConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="12" RowDefinitions="Auto,*,Auto">
        <!-- Encabezado -->
        <Label Text="Tu Carrito de Compras"
           FontSize="24"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           Grid.Row="0" />

        <!-- ColecciÃ³n de items -->
        <CollectionView x:Name="CartCollection"
                    Grid.Row="1"
                    SelectionMode="None"
                    VerticalOptions="FillAndExpand"
                    ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="80,*,Auto">
                        <Image Grid.Column="0"
                   WidthRequest="64" HeightRequest="64" Aspect="AspectFill"
                   Source="{Binding ImagenPath, Converter={StaticResource ImagePathToUriConverter}}" />
                        <StackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            <Label Text="{Binding Price, StringFormat='S/ {0:N2}'}" />
                        </StackLayout>
                        <StackLayout Grid.Column="2" VerticalOptions="Center" Spacing="8">
                            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                                <Button Text="-" WidthRequest="40" CommandParameter="{Binding ProductId}" Clicked="OnDecreaseClicked" />
                                <Label Text="{Binding Quantity}" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                <Button Text="+" WidthRequest="40" CommandParameter="{Binding ProductId}" Clicked="OnIncreaseClicked" />
                            </StackLayout>
                            <Button Text="Eliminar"
                      CommandParameter="{Binding ProductId}"
                      Clicked="OnRemoveClicked"
                      BackgroundColor="#e74c3c" TextColor="White" />
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Pie: total y Confirmar Compra -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="End" Spacing="12" Padding="8">
            <Label Text="{Binding Total, StringFormat='Total: S/ {0:N2}'}"
             FontAttributes="Bold" VerticalOptions="Center" />
            <Button Text="Confirmar Compra" Clicked="OnConfirmPurchaseClicked" HorizontalOptions="Fill" />
        </StackLayout>
    </Grid>
</ContentPage>